<h2><%= @task.title %></h2>
<p><%= @task.details %></p>

<p>
<% if @task.completed == true %>
  <%= p 'Task completed' %>
<% else %>
 <%= p 'This task has not yet been completed' %>
  <% end %>
</p>

<div class="links">
<p>
<%= link_to 'Update task', edit_path(@task) %>
</p>
<%= link_to 'Delete task', destroy_path(@task), method: :delete %>
<p>
<%= link_to 'Return to list', tasks_path %>
</p>
</div>
